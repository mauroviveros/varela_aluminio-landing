---
import { Nav } from '@components/landing';
import Brand from '@components/ui/Brand.astro';
---

<header class="fixed z-50 h-20 w-full bg-transparent py-4 transition-all duration-300 text-background animate__animated animate__fadeInDown">
  <div class="container mx-auto flex h-full items-center justify-between px-4">
    <Brand />
    <Nav />
  </div>
</header>

<script>
  const header = document.querySelector('header');

  window.addEventListener('scroll', () => {
    header?.setAttribute('data-scrolled', (window.scrollY > header?.offsetHeight).toString());
  });
</script>
